{
  "compileOnSave": false,
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@wishlist/api-client": ["libs/api-client/src/index.ts"],
      "@wishlist/api-drizzle": ["apps/api/drizzle/index.ts"],
      "@wishlist/api-test-utils": ["apps/api/test-utils/index.ts"],
      "@wishlist/api/*": ["apps/api/src/*/index.ts"],
      "@wishlist/common": ["libs/common/src/index.ts"],
      "@wishlist/front-components/*": ["apps/front/src/components/*"],
      "@wishlist/front-hooks": ["apps/front/src/hooks"],
      "@wishlist/plugin/biome": ["plugin/biome-plugin/src/index.ts"],
      "@wishlist/plugin/integration-test": ["plugin/integration-test-plugin/src/index.ts"],
      "@wishlist/plugin/drizzle": ["plugin/drizzle-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
