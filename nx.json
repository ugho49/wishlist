{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "tui": {
    "enabled": false
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "release": {
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}@{version}",
    "version": {
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits",
        "fallbackCurrentVersionResolver": "disk"
      }
    },
    "versionPlans": false,
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      },
      "workspaceChangelog": false
    },
    "git": {
      "commit": true,
      "tag": true
    },
    "groups": {
      "api": {
        "projects": ["api"],
        "version": {
          "generatorOptions": {
            "currentVersionResolver": "git-tag",
            "specifierSource": "conventional-commits"
          }
        }
      },
      "front": {
        "projects": ["front"],
        "version": {
          "generatorOptions": {
            "currentVersionResolver": "git-tag",
            "specifierSource": "conventional-commits"
          }
        }
      }
    }
  },
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "plugins": [
    {
      "plugin": "@wishlist/plugin/biome",
      "options": {
        "lintTargetName": "lint",
        "formatTargetName": "format",
        "checkTargetName": "check"
      }
    },
    {
      "plugin": "@wishlist/plugin/integration-test",
      "options": {
        "intTestTargetName": "test:int"
      }
    },
    {
      "plugin": "@wishlist/plugin/drizzle",
      "options": {
        "studioTargetName": "drizzle:studio",
        "generateTargetName": "drizzle:generate",
        "migrateTargetName": "drizzle:migrate",
        "seedTargetName": "drizzle:seed"
      }
    },
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "buildTargetName": "build",
        "previewTargetName": "preview",
        "serveTargetName": "serve",
        "serveStaticTargetName": "serve-static"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "previewTargetName": "preview",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "serveStaticTargetName": "serve-static"
      }
    }
  ],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/yarn.lock", "{workspaceRoot}/.circleci/*"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/src/test-setup.[jt]s"
    ]
  }
}
